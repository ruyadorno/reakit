{
  "lerna": "3.0.0",
  "version": "independent",
  "npmClient": "arborist",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "next"],
      "message": "chore(release): Publish"
    }
  }
}
